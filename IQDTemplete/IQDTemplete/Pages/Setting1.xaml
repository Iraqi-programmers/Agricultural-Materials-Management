<Page x:Class="IQDTemplete.Pages.Setting1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IQDTemplete.Pages"
      FlowDirection="{DynamicResource AppFlowDirection}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setting" Loaded="Page_Loaded">

    <Grid>
        <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
            <StackPanel>

                <GroupBox Padding="0,12,0,0" BorderThickness="0.4" BorderBrush="{DynamicResource Coboxborder}" Height="90" Margin="8" FontWeight="Bold" FontSize="14">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{DynamicResource ThemeTitle}" Foreground="{DynamicResource PrimaryTextColor}"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel>
                        <RadioButton Name="rdLight" Margin="0,0,0,8" Checked="rdLight_Checked" Content="{DynamicResource rdLight}" GroupName="Theme" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Normal" />
                        <RadioButton Name="rdDark" Checked="rdDark_Checked" Content="{DynamicResource rdDark}" GroupName="Theme" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Normal"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Padding="0,12,0,0" BorderThickness="0.4" BorderBrush="{DynamicResource Coboxborder}" Height="90" Margin="8" FontWeight="Bold" FontSize="14">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{DynamicResource LanguageTitle}" Foreground="{DynamicResource PrimaryTextColor}"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel>
                        <RadioButton Margin="0,0,0,8" Name="rdEnglish" Checked="rdEnglish_Checked" Content="{DynamicResource rdEnglish}" GroupName="Language" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Normal" />
                        <RadioButton Name="rdArabic" Checked="rdArabic_Checked" Content="{DynamicResource rdArabic}" GroupName="Language" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Normal"/>
                    </StackPanel>
                </GroupBox>

                <!-- زر تغيير الشعار قسم تغيير الشعار -->
                <GroupBox Padding="0,12,0,0" BorderThickness="0.4" BorderBrush="{DynamicResource Coboxborder}" Height="Auto" Margin="8" FontWeight="Bold" FontSize="14">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="Logo Settings" Foreground="{DynamicResource PrimaryTextColor}"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel HorizontalAlignment="Center">
                        <!-- عرض الشعار الحالي -->
                        <Image x:Name="imgLogo" Source="{DynamicResource AppLogo}" Width="100" Height="100" Margin="10"/>

                        <Button x:Name="btnChangeLogo" Content="Change Logo"
                            Click="btnChangeLogo_Click"
                            Width="100" Height="30" Margin="10"
                            FontSize="12" FontWeight="Bold"
                            Foreground="White"
                            Padding="5"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <!--الخصائص الافتراضية-->
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#2A6FC7" Offset="0"/>
                                                <GradientStop Color="#1E5799" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush" Value="#0D3C75"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="10" ShadowDepth="4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <!--الظل السفلي لإضافة تأثير البروز-->
                                                    <Border Background="Black" CornerRadius="10" Margin="0,5,0,0" Opacity="0.2"/>
                                                    <!--الشكل الرئيسي للزر-->
                                                    <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10" Padding="5">
                                                        <Grid>
                                                            <!--الانعكاس العلوي (يعطي تأثير لمعان)-->
                                                            <Rectangle Height="15" VerticalAlignment="Top" Opacity="0.3" RadiusX="10" RadiusY="10">
                                                                <Rectangle.Fill>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                        <GradientStop Color="White" Offset="0"/>
                                                                        <GradientStop Color="Transparent" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Rectangle.Fill>
                                                            </Rectangle>
                                                            <!--الأيقونة الاختيارية مع النص-->
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <!--<Image Source="Images/icon.png" Width="22" Height="22" Margin="0,0,8,0"/>-->
                                                                <!--استبدل بالأيقونة-->
                                                                <ContentPresenter VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </Grid>

                                                <!--تأثيرات الزر-->
                                                <ControlTemplate.Triggers>
                                                    <!--عند تمرير الماوس-->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Color="#3E8AEF" Offset="0"/>
                                                                    <GradientStop Color="#2A6FC7" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="Black" Opacity="0.7" BlurRadius="12" ShadowDepth="5"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.07" ScaleY="1.07"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>

                                                    <!--عند الضغط على الزر-->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Color="#1E5799" Offset="0"/>
                                                                    <GradientStop Color="#0D3C75" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="8" ShadowDepth="2"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </Border>
    </Grid>
</Page>
