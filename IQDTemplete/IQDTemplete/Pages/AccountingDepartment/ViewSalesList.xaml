<Page x:Class="Interface.Pages.AccountingDepartment.ViewSalesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface.Pages.AccountingDepartment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSalesList"
      >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.Resources>
            <!-- CollectionViewSource للفلترة -->
            <CollectionViewSource x:Key="FilteredInvoices" Source="{Binding Invoices}" Filter="CollectionViewSource_Filter" />
        </Grid.Resources>

        <TextBlock Text="قائمة المبيعات" Grid.Row="0"
                 FontSize="35"
                 FontWeight="ExtraLight"
                 Foreground="{DynamicResource PrimaryTextColor}"
                 Margin="5,0,0,10"
                  />

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"> 
        <ComboBox x:Name="FilterComboBox" 
             Width="200"
             Height="40"
             FontSize="16"
             Padding="55,8,0,0"
             Margin="4,12,0,11"
             FontWeight="ExtraLight"
             SelectedIndex="0">
            <ComboBoxItem Content="أسم المستخدم"/>
            <ComboBoxItem Content="تاريخ القائمة" />
            <ComboBoxItem Content="ربح القائمة" />
            <ComboBoxItem Content="المبلغ الكلي" />
            <ComboBoxItem Content="اسم الزبون" />
        </ComboBox>
        </StackPanel>

        <TextBox x:Name="SearchTextBox" Grid.Row="1"
             Width="300"
             Height="40"
             FontSize="15"
             Padding="10"
             FontWeight="ExtraLight"
             TextAlignment="Center"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Left"
             TextChanged="SearchTextBox_TextChanged"
             Margin="205,1,0,0"
             ToolTip="{Binding SelectedItem.Content, ElementName=FilterComboBox, StringFormat='بحث باستخدام {0}'}"                         >

        </TextBox>

        <!-- DataGrid -->
            <DataGrid x:Name="InvoiceDataGrid" Grid.Row="2" FlowDirection="{DynamicResource SPAppFlowDirection}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      GridLinesVisibility="Horizontal"
                      RowBackground="White"
                     
                      AlternatingRowBackground="#FF97ACCE"
                      BorderThickness="1"
                      Margin="2,5,2,0"
                      FontSize="20"
                      ItemsSource="{Binding Source={StaticResource FilteredInvoices}}">

                <!-- الأعمدة -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding UserName}" Width="*" />
                    <DataGridTextColumn Header="تاريخ القائمة" Binding="{Binding InvoiceDate}" Width="*" />
                    <DataGridTextColumn Header="ربح القائمة" Binding="{Binding Profit}" Width="*" />
                    <DataGridTextColumn Header="المبلغ الكلي" Binding="{Binding TotalAmount}" Width="*" />
                    <DataGridTextColumn Header="اسم الزبون" Binding="{Binding CustomerName}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
    </Grid>
</Page>