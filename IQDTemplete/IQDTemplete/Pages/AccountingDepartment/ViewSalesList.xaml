<Page x:Class="Interface.Pages.AccountingDepartment.ViewSalesList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface.Pages.AccountingDepartment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSalesList">
    <Grid Background="{DynamicResource PrimaryBackgroundColor}" >

        <StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">


                <Button Style="{DynamicResource ProButtonStyle}" Content="رجوع" Width="120" Height="40" Margin="770,0,0,0" Click="Button_Click" ></Button>

                <!-- عنوان الصفحة -->
                <TextBlock Text="قائمة المبيعات"
                 FontSize="28"
                 FontWeight="Bold"
                 Foreground="{DynamicResource PrimaryTextColor}"
                 HorizontalAlignment="Center"
                 Margin="0,-44,0,20"
                 VerticalAlignment="Top" />
                

            </StackPanel>

            <!-- مربع البحث -->
        <TextBox x:Name="SearchTextBox"
                 ToolTip="بحث باستخدام اسم الزبون"
                  Width="300"
                  Height="40"
                  FontSize="14"
                  Padding="10"
                 TextAlignment="Center"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  Margin="0,20,20,0"
                  TextChanged="SearchTextBox_TextChanged"
                  />

        <!-- DataGrid -->
        <DataGrid x:Name="InvoiceDataGrid"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  RowBackground="{DynamicResource PrimaryBackgroundColor}"
                  AlternatingRowBackground="{DynamicResource PrimaryBackgroundColor}"
                  BorderThickness="1"
                  Margin="20,20,20,0"
                  FontSize="20"
                  FontFamily="Segoe UI"
                  Height="auto" 
                  >

            <!-- أنماط DataGrid -->
            <DataGrid.Resources>
                <!-- نمط الرأس -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}" />
                    <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="12" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                </Style>

                <!-- نمط الخلايا -->
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                     <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                     <Setter Property="FontSize" Value="22"></Setter>
                    
                </Style>

                <!-- نمط الصفوف عند التحديد -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}" />
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <!-- الأعمدة -->
            <DataGrid.Columns>

                <DataGridTextColumn Header="اسم المستخدم"
                  Binding="{Binding UserName}"
                  Width="*" />

                <DataGridTextColumn Header="تاريخ القائمة"
                     Binding="{Binding InvoiceDate}"
                     Width="*" />

                <DataGridTextColumn Header="ربح القائمة"
                     Binding="{Binding Profit}"
                     Width="*" />
                
                <DataGridTextColumn Header="المبلغ الكلي"
                 Binding="{Binding TotalAmount}"
                 Width="*" />
                
                <DataGridTextColumn Header="اسم الزبون"
                    Binding="{Binding CustomerName}"
                    Width="*" />

              
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Page>
