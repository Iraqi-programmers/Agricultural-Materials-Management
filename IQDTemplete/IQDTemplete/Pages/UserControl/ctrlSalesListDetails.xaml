<UserControl x:Class="Interface.Pages.UserControl.ctrlSalesListDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Interface.Pages.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FlowDirection="{DynamicResource AppFlowDirection}"
             >
    <UserControl.Resources>
        <Style x:Key="CustoimTxt" TargetType="TextBlock">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Foreground" Value="{DynamicResource TertiaryTextColor}"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- معلومات المستخدم -->
            <RowDefinition Height="Auto"/>
            <!-- تفاصيل القائمة -->
            <RowDefinition Height="*"/>
            <!-- DataGrid للقوائم الفرعية -->
        </Grid.RowDefinitions>

        <!-- معلومات القائمة -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SecondaryBackgroundColor}"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="10"
                Margin="10">
            <StackPanel>
                <TextBlock Text="تفاصيل القائمة" Foreground="{DynamicResource TertiaryTextColor}" FontSize="22" FontWeight="ExtraBold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رقم القائمة -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="رقم القائمة :" Style="{StaticResource CustoimTxt}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="1" Style="{StaticResource CustoimTxt}"/>

                    <!-- تاريخ القائمة -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource CustoimTxt}" Text="تاريخ القائمة :" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="2025/12/1" Style="{StaticResource CustoimTxt}" />

                    <!-- اسم الزبون -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="اسم الزبون :" Style="{StaticResource CustoimTxt}"/>
                    <TextBlock x:Name="CoustemrName" Grid.Row="2" Grid.Column="1"  Style="{StaticResource CustoimTxt}" > <Hyperlink Cursor="Hand"  TextDecorations="Underline" ToolTip="عرض تفاصيل الزبون"  FontSize="18"  Click="CustomerName_Click">جاسم سعيد</Hyperlink></TextBlock>

                    <!-- المبلغ المدفوع -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="المبلغ المدفوع :" Style="{StaticResource CustoimTxt}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="100.000" Style="{StaticResource CustoimTxt}" />

                    <!-- المبلغ الكلي -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="المبلغ الكلي :" Style="{StaticResource CustoimTxt}"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="20.000" Style="{StaticResource CustoimTxt}" />
                </Grid>
            </StackPanel>
        </Border>

        <!--تفاصيل المنتج-->
        <StackPanel Grid.Row="1" Margin="400,20,0,0" >
            <TextBlock Text="تفاصيل المنتج" Foreground="{DynamicResource TertiaryTextColor}" FontSize="22" FontWeight="ExtraBold" Margin="0"/>
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- نوع المنتج -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="نوع المنتج:" Style="{StaticResource CustoimTxt}" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="بواري" Style="{StaticResource CustoimTxt}"/>

                <!-- تاريخ الضمان -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="تاريخ الضمان :" Style="{StaticResource CustoimTxt}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="2025/12/12" Style="{StaticResource CustoimTxt}"/>

                <!-- السعر -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="السعر :" Style="{StaticResource CustoimTxt}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="25.0000" Style="{StaticResource CustoimTxt}"/>

                <!-- الكمية -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="الكمية :" Style="{StaticResource CustoimTxt}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="5" Style="{StaticResource CustoimTxt}"/>

                <!-- المبلغ الكلي -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="المبلغ الكلي :" Style="{StaticResource CustoimTxt}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="15.000.000" Style="{StaticResource CustoimTxt}"/>

                <Image x:Name="UserInfo"  ToolTip="تفاصيل مدخل القائمة"  Margin="0,0,15,0" HorizontalAlignment="Right" Grid.Row="0" Width="40" Height="40" Source="/Assets/Logo.png" MouseDown="UserInfo_MouseDown" Grid.Column="1" />

            </Grid>


        </StackPanel>

        <!-- DataGrid للقوائم الفرعية -->
        <DataGrid Grid.Row="3"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  RowBackground="White"
                  AlternatingRowBackground="#FF97ACCE"
                  BorderThickness="1"
                  Margin="10"
                  FontSize="16"
                  FontFamily="Segoe UI"
                  ItemsSource="{Binding SubInvoices}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم القائمة" Binding="{Binding InvoiceNumber}" Width="*"/>
                <DataGridTextColumn Header="نـوع المنتج"   Width="*"/>
                <DataGridTextColumn Header="العـدد"   Width="*"/>
                <DataGridTextColumn Header="السـعر"   Width="*"/>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
