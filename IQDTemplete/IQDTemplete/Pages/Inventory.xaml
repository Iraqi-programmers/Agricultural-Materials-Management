<Page x:Class="Interface.Pages.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inventory"
       FlowDirection="{DynamicResource AppFlowDirection}"
 FontFamily="Poppins">

    <Border CornerRadius="8" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Name="Header" Height="50" />
                <RowDefinition Name="ComandBar" Height="60"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="0,5,0,0" Grid.Row="0" Background="{DynamicResource SecundaryBackgroundColor}">
                <Label Margin="0,0,0,5" Content="Collections" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Name="MainContainer" Grid.Row="1" Background="{DynamicResource SecundaryBackgroundColor}" Margin="0,4,0,14" >


                <Menu Background="{DynamicResource SecundaryBackgroundColor}" Height="40" Width="800">

                    <MenuItem Background="{DynamicResource SecundaryBackgroundColor}"  Width="98" Height="40">
                        <MenuItem.Header >
                            <StackPanel Orientation="Horizontal" Width="100" Height="40">

                                <Path  Fill="{DynamicResource PrimaryTextColor}" Data="{StaticResource ADD}" Stretch="Fill" Width="15" RenderTransformOrigin="0.846,0.447" Height="16" Margin="5"/>

                                <TextBlock VerticalAlignment="Center" Text="Add" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" Width="74"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>

                    <MenuItem Background="{DynamicResource SecundaryBackgroundColor}"  Width="98" Height="40">
                        <MenuItem.Header >
                            <StackPanel Orientation="Horizontal" Width="100" Height="40">

                                <Path Fill="{DynamicResource PrimaryTextColor}" Data="{StaticResource Update}" Stretch="Fill" Width="15" RenderTransformOrigin="0.846,0.447" Height="16" Margin="5"/>

                                <TextBlock VerticalAlignment="Center" Text="Update" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" Width="74"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>

                    <MenuItem Background="{DynamicResource SecundaryBackgroundColor}"  Width="98" Height="40">
                        <MenuItem.Header >
                            <StackPanel Orientation="Horizontal" Width="100" Height="40">

                                <Path Fill="{DynamicResource PrimaryTextColor}" Data="{StaticResource Delete2}" Stretch="Fill" Width="15" RenderTransformOrigin="0.846,0.447" Height="16" Margin="5"/>

                                <TextBlock VerticalAlignment="Center" Text="Delete" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}" Width="74"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>

                   






                </Menu>

            </StackPanel>

        </Grid>
    </Border>
</Page>
