<Page x:Class="Interface.Pages.InventoryDepartment.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface.Pages.UserControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Border CornerRadius="8" Background="{DynamicResource PrimaryBackgroundColor}">
        <Grid FlowDirection="{DynamicResource AppFlowDirection}" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="164"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--PurchasIinventory-->
            <Border
         Grid.Column="0"
         CornerRadius="20"
         Margin="7,7,7,0"
         Height="150"
         VerticalAlignment="Top"
         Background="{DynamicResource SecundaryBackgroundColor}"
         Grid.Row="0"
         Grid.RowSpan="1">

                <Grid>
                    <local:BorderAnimation x:Name="PurchaseInventory"
                                       Text="{DynamicResource rdPurchasIinventory}"
                                       TextColor="{DynamicResource TertiaryTextColor}"
                                       IconSource="/Assets/Purchases.png"
                                       MouseDown="PurchaseInventory_MouseDown_1"
                                       />
                </Grid>
            </Border>
            
            <!--SalesInventory-->
            <Border
         Grid.Column="1"
         CornerRadius="20"
         Margin="7,7,7,0" 
         Height="150"
         VerticalAlignment="Top"
         Background="{DynamicResource SecundaryBackgroundColor}"
         Grid.Row="0"
         Grid.RowSpan="1">

                <Grid>
                    <local:BorderAnimation x:Name="SalesInventory"
                                       Text="{DynamicResource rdSalesInventory}"
                                       TextColor="{DynamicResource TertiaryTextColor }"                               
                                       IconSource="/Assets/sale.png"
                                       MouseDown="SaleInventory_MouseDown"
                                       />
                </Grid>
            </Border>
            
            <!--DebtInventory-->
            <Border
         Grid.Column="0"
         CornerRadius="20"
         Margin="7,0,7,0"
         Height="150"
         VerticalAlignment="Top"
         Background="{DynamicResource SecundaryBackgroundColor}"
         Grid.Row="1"
         Grid.RowSpan="1">

                <Grid>
                    <local:BorderAnimation x:Name="DebtInventory"
                                       Text="{DynamicResource rdDebtInventory}"
                                       TextColor="{DynamicResource TertiaryTextColor}"                                       IconSource="/Assets/DebitsMangment.png"
                                       MouseDown="DebtInventory_MouseDown"
                                       />
                </Grid>
            </Border>

            <!--ProductInventory-->
            <Border
Grid.Column="2"
CornerRadius="20"
Margin="7,0,7,0"
Height="150"
Background="{DynamicResource SecundaryBackgroundColor}"
Grid.Row="0"

>

                <Grid>
                    <local:BorderAnimation x:Name="Koko"
                              Text="{DynamicResource rdProductInventory}"
                              TextColor="{DynamicResource TertiaryTextColor}"                                      
                              IconSource="/Assets/inventory.png"
                              />
                </Grid>
            </Border>


        </Grid>
    </Border>
</Page>
